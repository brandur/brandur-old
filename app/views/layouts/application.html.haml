!!! 5
%html
  %head
    %title= content_for?(:title) ? yield(:title) : 'brandur.org'
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js', 'rails'
    = #coffee_script_bundle
    = coffee_script_bundle :mode => :inline
    = csrf_meta_tag
    %meta{ 'http-equiv' => 'content-type', :content => 'text/html; charset=UTF-8' }
    = yield :head
  %body
    - flash.each do |name, msg|
      .flash{ :id => "flash_#{name}" }= msg
      - content_for(:javascript) do
        :javascript
          window.setTimeout('$("#flash_#{name}").slideUp(500)', 2000);

    = yield
  - # Yield is at the bottom so we can add its content anywhere above
  = yield :javascript
